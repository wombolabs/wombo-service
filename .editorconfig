# http://editorconfig.org
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf
trim_trailing_whitespace = true

[{package.json}]
charset = utf-8
indent_style = space
indent_size = 2

[*.md]
max_line_length = 0
trim_trailing_whitespace = false
